{
  "name": "dungeon",
  "version": "1.0.0",
  "description": "Simple HTML5 dungeon generator.",
  "repository": "git@github.com:nickgravelyn/dungeon.git",
  "author": "Nick Gravelyn <nick@gravelyn.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "parcel src/index.html",
    "lint": "eslint .",
    "lint:fix": "yarn lint --fix",
    "prettier": "prettier --write * .* **/*",
    "gh-pages": "rimraf ./dist && parcel build src/index.html --no-source-maps --public-url /dungeon && gh-pages -d dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "!**.js": [
      "prettier --write",
      "git add"
    ],
    "**.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "eslint": "^5.5.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "gh-pages": "^1.2.0",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.2",
    "parcel-bundler": "^1.9.7",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "express": "^4.16.4",
    "socket.io": "^2.2.0"
  }
}
